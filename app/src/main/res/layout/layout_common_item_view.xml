<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/drawable_list_item_selector"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/v_content_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <TextView
      android:id="@+id/v_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:includeFontPadding="false"
      android:text="标题"
      android:textColor="@color/font1"
      android:textSize="16sp"
      tools:ignore="HardcodedText" />

    <TextView
      android:id="@+id/v_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:includeFontPadding="false"
      android:text="子标题"
      android:textColor="@color/font2"
      android:textSize="11sp"
      android:visibility="gone"
      tools:ignore="HardcodedText"
      tools:visibility="visible" />
  </LinearLayout>

  <View
    android:id="@+id/v_divider"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/v_content_parent"
    android:background="@color/divider" />
</RelativeLayout>